<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  These colors change when the theme change (Dark/Light)  -->
    <Color x:Key="MicaWPF.Colors.SystemAccentColorPrimary">#559ce4</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorSecondary">#80b9ee</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorTertiary">#add8ff</Color>

    <!--  These colors stay the same even on theme change  -->

    <Color x:Key="MicaWPF.Colors.SystemAccentColorLight3">#91C5F0</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorLight2">#60AFEE</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorLight1">#3091E2</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColor">#2D78D6</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorDark1">#1F5AA2</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorDark2">#113D70</Color>
    <Color x:Key="MicaWPF.Colors.SystemAccentColorDark3">#0C2F56</Color>

</ResourceDictionary>